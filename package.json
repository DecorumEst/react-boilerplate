{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate com storybook e variáveis de ambiente configuradas para melhor performance da aplicação",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "start:dev": "webpack-dev-server --open --config webpack.dev.js --hot",
    "lint": "./node_modules/.bin/eslint src/*js",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require @babel/register",
    "test:coverage": "nyc yarn test",
    "test:watch": "yarn test -- --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "alias": {
    "react-dom": "@hot-loader/react-dom"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "pre-push": "yarn lint && yarn test:coverage"
    }
  },
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporters": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "\u0016https://github.com/AMarcosCastelo/react-boilerplate.git"
  },
  "keywords": [
    "ReactJS",
    "JS",
    "JavaScript",
    "Webpack",
    "Storybook",
    "TDD"
  ],
  "author": "Antonio Marcos Castelo <marcos-12marcos@hotmail.com> (https://github.com/AMarcosCastelo)",
  "license": "MIT",
  "dependencies": {
    "@hot-loader/react-dom": "^16.11.0",
    "html-webpack-plugin": "^3.2.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@storybook/addon-actions": "^5.3.8",
    "@storybook/addon-links": "^5.3.8",
    "@storybook/addons": "^5.3.8",
    "@storybook/react": "^5.3.8",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "raw-loader": "^4.0.0",
    "react-hot-loader": "^4.12.19",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.2"
  }
}
